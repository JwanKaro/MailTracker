{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 17",

  "compilerOptions": {
    "lib": ["esnext"],
    "module": "CommonJS",
    "target": "ES2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@type": ["./src/@types/index"],
      "@router/*": ["./src/router/*"],
      "@logic/*": ["./src/logic/*"]

    }
  },
  "exclude": ["node_modules", "dist"]
}